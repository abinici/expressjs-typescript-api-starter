{
  "name": "expressjs-typescript-api-starter",
  "version": "0.0.4",
  "description": "This is an annotation-based starter project for writing an API with ExpressJS",
  "scripts": {
    "dev": "./node_modules/.bin/nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "start": "./node_modules/.bin/ts-node src/index.ts",
    "test": "jest"
  },
  "author": "Ayhan Binici",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "class-transformer": "^0.3.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.6",
    "typedi": "^0.5.2",
    "typeorm-routing-controllers-extensions": "^0.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.39",
    "@types/jest": "^24.0.18",
    "@types/supertest": "^2.0.8",
    "jasmine": "^3.4.0",
    "jasmine-ts": "^0.3.0",
    "jest": "^24.9.0",
    "nodemon": "^1.18.7",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
